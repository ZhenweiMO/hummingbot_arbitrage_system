FROM python:3.10-slim

# 设置工作目录
WORKDIR /app

# 复制 requirements.txt
COPY requirements.txt .

# 安装 Python 依赖（只安装不需要编译的包）
RUN pip install --no-cache-dir fastapi uvicorn sqlalchemy alembic pydantic python-multipart requests aiofiles python-dotenv aiohttp cryptography

# 复制应用代码
COPY . .

# 创建必要的目录
RUN mkdir -p /app/logs /app/data

# 暴露端口
EXPOSE 8000

# 启动命令
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"] 